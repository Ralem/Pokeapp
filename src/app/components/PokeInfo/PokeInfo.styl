.PokeInfo
    width 100%
    padding 20px
    overflow hidden
    background-color white

.PokeInfo-body
    display flex
    flex-flow row wrap
    width 100%

.PokeInfo-title
    width 100%
    margin 0
    margin-bottom 30px
    font-size 40px
    text-transform capitalize
    text-align center

.PokeInfo-subtitle
    font-size 30px
    text-align center

.PokeInfo-picture
    width 50%

.PokeInfo-img
    display block
    width 475px
    height @width
    margin 0 auto

.PokeInfo-data
    width 50%

.PokeInfo-stats
    display flex
    flex-flow row wrap
    width 50%
    padding 10px 30px
    margin 0 auto
    border-radius 10px
    background-color #30a7d7

.PokeInfo-stat
    width 33%
    text-align center

.PokeInfo-stat-name
    color white
    letter-spacing 0.09em
    font-weight 700
    text-transform capitalize

.PokeInfo-stat-baseStat
    font-size 20px
    font-weight 500
    font-style italic

.PokeInfo-types
    text-align center
