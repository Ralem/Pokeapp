.PokeInfo
    width 100%
    padding 20px
    background-color white

.PokeInfo-body
    display flex
    flex-flow row wrap
    width 100%
    max-width 1000px
    margin 0 auto

.PokeInfo-title
    width 100%
    margin 0
    margin-bottom 30px
    font-size 40px
    text-transform capitalize
    text-align center

.PokeInfo-title-wrapper
    display flex
    flex-flow row wrap
    justify-content center
    align-content flex-start
    align-items flex-start
    width 100%
    height auto

.PokeInfo-subtitle
    margin-top 0
    font-size 30px
    text-align center

.PokeInfo-picture
    display flex
    flex-flow row wrap
    justify-content center
    align-items center
    align-content center
    width 50%

.PokeInfo-picture-wrapper
    width 360px
    height 400px
    border-radius 25px
    overflow hidden
    // box-shadow -5px 5px 2px rgba(#000, 0.1)
    background-color #F2F2F2

.PokeInfo-picture-controls
    position relative
    width 100%
    height 40px
    background-color #f2f2f2

    &:before
        position absolute
        content ""
        width 50px
        height 100%
        left 50%
        top 0
        transform translateX(-50%)
        border-top-left-radius 15px
        border-top-right-radius 15px
        background-color #fff

.PokeInfo-picture-controls-CapturedSelect
    position absolute
    width 30px
    height @width
    font-size @width - 10px
    left 50%
    top 50%
    transform translate(-50%, -50%)

.PokeInfo-img
    display block
    width 360px
    max-width 100%
    height @width
    margin 0 auto

.PokeInfo-data
    width 50%

.PokeInfo-stats
    display flex
    flex-flow row wrap
    width 90%
    padding 10px 30px
    margin 0 auto
    margin-bottom 30px
    border-radius 10px
    background-color #30a7d7

.PokeInfo-stat
    display flex
    flex-flow column wrap
    justify-content space-between
    width 33%
    height 90px
    text-align center

.PokeInfo-stat-name
    width 100%
    margin 0
    margin-top 10px
    font-size 14px
    color white
    letter-spacing 0.09em
    font-weight 700
    text-transform capitalize

.PokeInfo-stat-baseStat
    width 100%
    margin 0
    margin-bottom 10px
    font-size 20px
    font-weight 500
    font-style italic

.PokeInfo-types
    text-align center
