.CapturedSelect
    position relative
    display flex
    flex-flow column wrap
    justify-content center
    align-content center
    align-items center
    width 25px
    height @width
    font-size 16px
    border-radius 50%
    cursor pointer
    background-color #fff
    color #616161

    .Icon
        display block
        margin-top 1px

.CapturedSelect--selected
    background-color #e43912
    color #fff
