.Tooltip
    position absolute
    left 50%
    top -10px
    width 200px
    padding 5px
    border-radius 10px
    transform translate(-50%, -100%)
    font-size 14px
    line-height 18px
    font-weight 700
    text-align center
    color #fff
    background-color #e4312e
    box-shadow 0px 3px 2px rgba(#000, 0.3)

    &:after
        content ""
        position absolute
        left 50%
        bottom 0
        width 0px
        height 0px
        transform translate(-50%, 100%)
        border-style solid
        border-width 10px 10px 0 10px;
        border-color @background-color transparent transparent transparent
        // box-shadow 0px 3px 2px rgba(#000, 0.5)

    p
        margin 5px
