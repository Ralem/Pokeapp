.Tab
    position relative
    display inline-block
    overflow hidden
    width 180px
    height 50px
    border-radius 10px 10px 5px 5px
    margin-right 4px
    font-weight 700
    letter-spacing 0.05em
    color #fff
    background-color #525252
    cursor pointer

    &:before
        content ""
        position absolute
        left 0
        bottom 0
        width 100%
        height 7px
        transition height 0.25s ease-out
        background-color #000

.Tab--active
    &:before
        height 100%

.Tab-content
    position relative
    display flex
    flex-flow row wrap
    align-content center
    align-items center
    justify-content center
    width 100%
    min-height 100%
    max-height 100%
